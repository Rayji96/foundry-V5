<form class="{{cssClass}} flexcol {{#if locked}}locked{{/if}} vampire-sheet" autocomplete="off">
  {{#if displayBanner}}
  <div class="sheet-banner">
    <h1>{{ sheetType }}</h1>
  </div>
  {{/if}}

  {{!-- Vampire Sheet Header --}}
  <header class="actor-header">
      <div class="header-fields-top">
        <div class="header-profile-img">
            {{!-- Actor image and sheet lock toggle button --}}
            {{> "systems/vtm5e/templates/actor/parts/profile-img.hbs"}}
        </div>
        <div class="header-rows-top">
            <div class="header-row-1">
                {{!-- Text input header fields --}}
                <h1 class="charname"><input class="no-border" name="name" type="text" value="{{actor.name}}"
                  placeholder="{{localize 'WOD5E.Name'}}" /></h1>
                  
                <h1 class="charname"><input class="no-border" name="system.clan.value" type="text" value="{{actor.system.clan.value}}"
                  placeholder="{{localize 'WOD5E.VTM.Clan'}}" /></h1>

                <h1 class="charname"><input class="no-border" name="system.headers.predator" type="text" value="{{actor.system.headers.predator}}"
                  placeholder="{{localize 'WOD5E.VTM.Predator'}}" /></h1>
            </div>
            <div class="header-row-2">
                {{!-- Health Tracker --}}
                {{> "systems/vtm5e/templates/actor/parts/health.hbs"}}

                {{!-- Willpower Tracker --}}
                {{> "systems/vtm5e/templates/actor/parts/willpower.hbs"}}

                {{!-- XP Tracker --}}
                {{> "systems/vtm5e/templates/actor/parts/exp.hbs"}}

                {{!-- Anything more that needs to be in the header spot --}}
                {{> "systems/vtm5e/templates/actor/parts/vampire/hunger.hbs"}}

                {{> "systems/vtm5e/templates/actor/parts/vampire/rouse.hbs"}}

                {{> "systems/vtm5e/templates/actor/parts/vampire/frenzy.hbs"}}
            </div>
        </div>
    </div>
  </header>

  {{!-- Vampire Sheet Tab Navigation --}}
  <nav class="sheet-tabs tabs" data-group="primary">
      <div class="item" data-tab="stats">{{localize "WOD5E.Tabs.Stats"}}</div>
      <div class="item" data-tab="disciplines">{{localize "WOD5E.VTM.Disciplines"}}</div>
      <div class="item" data-tab="features">{{localize "WOD5E.Tabs.Features"}}</div>
      <div class="item" data-tab="blood">{{localize "WOD5E.VTM.Blood"}}</div>
      <div class="item" data-tab="description">{{localize "WOD5E.Tabs.Description"}}</div>
      <div class="item" data-tab="other">{{localize "WOD5E.Tabs.Other"}}</div>
  </nav>

  {{!-- Vampire Sheet Body --}}
  <section class="sheet-body">
      {{!-- Stats Tab --}}
      {{> "systems/vtm5e/templates/actor/parts/stats.hbs"}}

      {{!-- Owned Powers Tab --}}
      {{> "systems/vtm5e/templates/actor/parts/vampire/disciplines.hbs"}}

      {{!-- Owned Features Tab --}}
      {{> "systems/vtm5e/templates/actor/parts/features.hbs"}}

      {{!-- Blood Tab --}}
      {{> "systems/vtm5e/templates/actor/parts/vampire/blood.hbs"}}

      {{!-- Biography Tab --}}
      {{> "systems/vtm5e/templates/actor/parts/biography.hbs"}}

      {{!-- Other Tab --}}
      {{> "systems/vtm5e/templates/actor/parts/other.hbs"}}
    </section>
</form>
