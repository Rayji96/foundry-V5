<div class="resource flex-group-center willpower">
    <div class="flexrow">
        <i class="fas fa-minus resource-control resource-minus" data-resource="willpower" data-action="minus"></i>
        <label for="actor.system.willpower" class="resource-label rollable" data-use-absolute-value="true"
            data-absolute-value="{{willpower actor.system.willpower.max actor.system.willpower.superficial actor.system.willpower.aggravated}}"
            data-disable-advanced-dice="true" data-label="{{localize 'WOD5E.Chat.RollingWillpower'}}" data-quick-roll="true"
            data-selectors="willpower">{{localize "WOD5E.Willpower"}}</label>
        <i class="fas fa-plus resource-control resource-plus" data-resource="willpower" data-action="plus"></i>
    </div> 
    <div class="resource-content flexrow flex-center flex-between">
        <div class="resource-counter" data-states="/:superficial,x:aggravated" data-max="{{actor.system.willpower.max}}"
            data-superficial="{{actor.system.willpower.superficial}}" data-aggravated="{{actor.system.willpower.aggravated}}" data-name="system.willpower">
            {{#numLoop actor.system.willpower.max}}
            <span class="resource-counter-step" data-index="{{this}}" data-state=""></span>
            {{/numLoop}}
        </div>
    </div>
</div>