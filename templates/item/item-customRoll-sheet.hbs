<form class="{{cssClass}}" autocomplete="off">
    <header class="item-header">
        <img class="profile-img" src="{{item.img}}" data-edit="img" title="{{item.name}}" alt="Item Image" />
        <div class="header-fields">
            <h1 class="charname"><input name="name" type="text" value="{{item.name}}"
                placeholder="{{localize 'WOD5E.Name'}}" /></h1>
        </div>
    </header>

    {{!-- Sheet Tab Navigation --}}
    <nav class="sheet-tabs tabs" data-group="primary">
        <a class="item" data-tab="description">{{localize "WOD5E.Tabs.Description"}}</a>
        <a class="item" data-tab="attributes">{{localize "WOD5E.Attributes.Attributes"}}</a>
        <a class="item" data-tab="macro">{{localize "WOD5E.Items.Macro"}}</a>
        <a class="item" data-tab="bonuses">{{localize "WOD5E.Items.Bonuses"}}</a>
    </nav>

    {{!-- Sheet Body --}}
    <section class="sheet-body">
        {{!-- Description Tab --}}
        <div class="tab" data-group="primary" data-tab="description">
            {{editor enrichedDescription target="system.description" button=true editable=editable}}
        </div>

        {{!-- Attributes Tab --}}
        <div class="tab attributes" data-group="primary" data-tab="attributes">
            <div class="resource grid grid-2col flex-center">
                <label class="resource-label">{{localize "WOD5E.Attributes.Label"}}: </label>
                <select name="system.dice1" data-type="String">
                    {{#select item.system.dice1}}
                    {{> "systems/vtm5e/templates/item/parts/attributes.hbs"}}
                    {{/select}}
                </select>
                <label class="resource-label">{{localize "WOD5E.Skills.Label"}}: </label>
                <select name="system.dice2" data-type="String">
                    {{#select item.system.dice2}}
                    {{> "systems/vtm5e/templates/item/parts/skills.hbs"}}
                    {{/select}}
                </select>
                <label class="resource-label">{{localize "WOD5E.Roll.Modifier"}}: </label>
                <input name="system.modifier" value="{{item.system.modifier}}" type="number"/>
            </div>
        </div>

        {{!-- Macro Tab --}}
        {{> "systems/vtm5e/templates/item/parts/macro.hbs"}}

        {{!-- Bonuses Tab --}}
        {{> "systems/vtm5e/templates/item/parts/bonuses.hbs"}}
    </section>
</form>
